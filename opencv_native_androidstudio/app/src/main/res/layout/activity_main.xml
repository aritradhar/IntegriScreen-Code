<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.integriscreen.MainActivity">

    <!-- This used to be in the RelativeLayour tag:
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
-->

    <Button
        android:id="@+id/canny"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickShowCanny"
        android:text="Canny" />

    <Button
        android:id="@+id/diff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/canny"
        android:onClick="onClickShowDiff"
        android:text="Diff" />

    <Button
        android:id="@+id/detect_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/realignCheckBox"
        android:onClick="onClickShowColor"
        android:text="Detect Frame" />

    <Button
        android:id="@+id/raw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/detect_text_button"
        android:onClick="onClickShowRaw"
        android:layout_below="@+id/canny"
        android:text="Raw" />

    <org.opencv.android.JavaCameraView
        android:id="@+id/main_surface"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignEnd="@+id/colorLabel"
        android:layout_alignParentTop="true" />

    <SeekBar
        android:id="@+id/colorSeekBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/raw"
        android:layout_alignEnd="@+id/detect_frame"
        android:layout_below="@+id/detect_frame"
        android:layout_marginTop="13dp"
        android:layout_marginStart="60dp"
        android:max="350"
        android:progress="130" />

    <TextView
        android:id="@+id/colorLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/detect_frame"
        android:layout_above="@+id/colorSeekBar"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/holo_green_light"
        android:text="240"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/detect_text_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/canny"
        android:onClick="onClickDetectText"
        android:text="OCR" />

    <SeekBar
        android:id="@+id/detect_method"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/colorSeekBar"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/colorSeekBar"
        android:layout_marginEnd="1dp"
        android:layout_toEndOf="@+id/colorSeekBar"
        android:max="2"
        android:progress="1" />

    <CheckBox
        android:id="@+id/realignCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/diff"
        android:layout_marginStart="80dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimary"
        android:checked="false"
        android:text="Realign" />

    <TextView
        android:id="@+id/textOutput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/main_surface"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="OCR not started" />

</RelativeLayout>
