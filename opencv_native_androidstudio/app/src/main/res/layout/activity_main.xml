<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.integriscreen.MainActivity">

    <Button
        android:id="@+id/canny"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickShowCanny"
        android:text="Canny" />

    <Button
        android:id="@+id/diff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/canny"
        android:onClick="onClickShowDiff"
        android:text="Diff" />

    <Button
        android:id="@+id/color_detect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/raw"
        android:onClick="onClickShowColor"
        android:text="Color Detect" />

    <Button
        android:id="@+id/raw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/diff"
        android:onClick="onClickShowRaw"
        android:text="Raw" />

    <org.opencv.android.JavaCameraView
        android:id="@+id/main_surface"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignEnd="@+id/colorLabel"
        android:layout_alignParentTop="true" />

    <SeekBar
        android:id="@+id/colorSeekBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/raw"
        android:layout_alignEnd="@+id/color_detect"
        android:layout_below="@+id/color_detect"
        android:layout_marginTop="13dp"
        android:max="350"
        android:progress="130" />

    <TextView
        android:id="@+id/colorLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/colorSeekBar"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/color_detect"
        android:background="@android:color/white"
        android:text="240"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/detect_text_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/diff"
        android:layout_below="@+id/diff"
        android:onClick="onClickDetectText"
        android:text="Detect Text" />

    <SeekBar
        android:id="@+id/detect_method"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/colorSeekBar"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/colorSeekBar"
        android:layout_marginEnd="12dp"
        android:layout_toEndOf="@+id/colorSeekBar"
        android:max="2"
        android:progress="0" />

    <CheckBox
        android:id="@+id/realichCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/detect_text_button"
        android:layout_alignBottom="@+id/detect_text_button"
        android:layout_toStartOf="@+id/diff"
        android:background="@color/colorAccent"
        android:text="Realign" />

</RelativeLayout>
